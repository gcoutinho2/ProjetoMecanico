@{
    Layout = "~/Views/Shared/_Mestre.cshtml";

    List<string> marcas = new List<string>() { "FIAT", "CHEVROLET", "VOLKSWAGEN", "FORD" };
}

@section Corpo {
    <div class="container-fluid">

        <h1>Cadastrar Informações do Veículo</h1>
        <hr>
        <form id="formCadastro">
            <!-- Marca e Modelo-->
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="text-base" for="Marca">Marca</label>
                    <select id="Marca" class="form-control" name="Marca">
                        <option selected="selected" value="">Selecione...</option>
                        @foreach (string marca in marcas)
                        {
                            <option value="@marca">@marca</option>
                        }
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label class="text-base" for="Modelo">Modelo</label>
                    <select id="Modelo" class="form-control" name="Modelo">
                        <option selected="selected" value="">Selecione...</option>
                    </select>
                </div>
            </div>

            <!-- Cor, Ano, KM e data da última revisão-->
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputCor">Cor</label>
                    <input type="text" class="form-control" id="inputCor" name="Cor">
                </div>
                <div class="form-group col-md-1">
                    <label for="inputAno">Ano</label>
                    <input type="text" class="form-control" id="inputAno" name="Ano">
                </div>
                <div class="form-group col-md-3">
                    <label for="inputKm">KM do veículo</label>
                    <input type="text" class="form-control" id="inputKm" name="Km">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputDataRevisao">Data da última revisão</label>
                    <input class="form-control" type="date" id="inputDataRevisao" name="DtRev">
                </div>
            </div>

            <!-- Procedimentos realizados na última revisão-->
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label>Procedimentos realizados na última revisão</label>
                    <div class="row show-grid">

                        <div class="col-xs-6 col-sm-4">
                            <label for="ar">
                                <input type="checkbox" id="ar" name="FiltroAr" value="" /> Filtro de Ar
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="arComb">
                                <input type="checkbox" id="filComb" name="FiltroCombustivel" value="" /> Filtro de Combustível
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="arCond">
                                <input type="checkbox" id="arCond" name="FiltroArCondicionado" value="" /> Filtro Ar Condicionado
                            </label>
                        </div>


                        <div class="col-xs-6 col-sm-4">
                            <label for="oleo">
                                <input type="checkbox" id="oleo" name="FiltroOleo" value="" /> Filtro de Óleo
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="velas">
                                <input type="checkbox" id="velas" name="Velas" value="" /> Velas
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="luzes">
                                <input type="checkbox" id="luzes" name="Luzes" value="" /> Luzes
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="freios">
                                <input type="checkbox" id="freios" name="PastilhaFreio" value="" /> Freios
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="amortecedor">
                                <input type="checkbox" id="amortecedor" name="Amortecedor" value="" /> Amortecedor
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="pneus">
                                <input type="checkbox" id="pneus" name="Pneu" value="" /> Pneus
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="correiaDentada">
                                <input type="checkbox" id="correiaDentada" name="CorreiaDentada" value="" /> Correia Dentada
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="alternador">
                                <input type="checkbox" id="alternador" name="CorreiaAlternador" value="" /> Correia do Alternador
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="motor">
                                <input type="checkbox" id="motor" name="FluidoTransmissao" value="" /> Fluído de Transmissão
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="alinhamento">
                                <input type="checkbox" id="alinhamento" name="Alinhamento" value="" /> Alinhamento
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="fluidoDire">
                                <input type="checkbox" id="fluidoDire" name="FluidoDirecao" value="" /> Fluído da Direção
                            </label>
                        </div>

                        <div class="col-xs-6 col-sm-4">
                            <label for="fluidoOleo">
                                <input type="checkbox" id="fluidoOleo" name="DiscoFreio" value="" /> Disco de Freio
                            </label>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Botão enviar-->
            <div class="form-row">
                <div class="form-group col-md-12">
                    <button type="submit" id="cadVeiculo" class="btn btn-lg btn-primary btn-block btn-signin" >Cadastrar</button>
                </div>

            </div>

        </form>


        <!-- Blank div to give the page height to preview the fixed vs. static navbar-->
        @*  *@
    </div>
    <div style="height: 90px;"></div>


    <script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/assets/js/jquery.validate.min.js"></script>
    <script type="text/javascript">

        if ($("#ar").is(':checked')) {
            $("#ar").val(1);
        }

        if ($("#filComb").is(':checked')) {
            $("#filComb").val(1);
        }

        if ($("#arCond").is(':checked')) {
            $("#arCond").val(1);
        }

        if ($("#oleo").is(':checked')) {
            $("#oleo").val(1);
        }

        if ($("#velas").is(':checked')) {
            $("#velas").val(1);
        }

        if ($("#luzes").is(':checked')) {
            $("#luzes").val(1);
        }

        if ($("#freios").is(':checked')) {
            $("#freios").val(1);
        }

        if ($("#amortecedor").is(':checked')) {
            $("#amortecedor").val(1);
        }

        if ($("#pneus").is(':checked')) {
            $("#pneus").val(1);
        }

        if ($("#correiaDentada").is(':checked')) {
            $("#correiaDentada").val(1);
        }

        if ($("#alternador").is(':checked')) {
            $("#alternador").val(1);
        }

        if ($("#motor").is(':checked')) {
            $("#motor").val(1);
        }

        if ($("#alinhamento").is(':checked')) {
            $("#alinhamento").val(1);
        }

        if ($("#fluidoDire").is(':checked')) {
            $("#fluidoDire").val(1);
        }

        if ($("#fluidoOleo").is(':checked')) {
            $("#fluidoOleo").val(1);
        }

        document.getElementById("Marca").onchange = function () {
            $.ajax({
                url: "/veiculo/ObterModelos",
                method: "get",
                cache: false,
                data: { marca: this.value },
                success: function (dados) {
                    var html = '<option selected="selected">Selecione...</option>';
                    for (var i = 0; i < dados.length; i++) {
                        html += '<option value="' + dados[i] + '">' + dados[i] + '</option>';
                    }
                    document.getElementById("Modelo").innerHTML = html;
                },
                error: function (x) {
                    alert(x);
                }
            });
        };
            

        $("#formCadastro").validate({
            rules: {
                Marca: {
                    required: true
                },

                Modelo: {
                    required: true
                },

                Cor: {
                    required: true,
                },

                Ano: {
                    required: true
                },

                Km: {
                    required: true
                },

                DtRev: {
                    required: true,
                }
            },

            submitHandler: function (form) {

                var cadastroVeiculo = {
                    carro: {
                        Cor: $("#inputCor").val(),
                        Ano: $("#inputAno").val(),
                        Km: $("#inputKm").val()
                    },

                    montadora: {
                        Nome: $("#Marca").val()
                    },

                    marca: {
                        Nome: $("#Modelo").val()
                    },

                    revisoes: {
                        Data: $("#inputDataRevisao").val(),
                        FiltroAr: $("#ar").val(),
                        FiltroCombustivel: $("#filComb").val(),
                        FiltroArCondicionado: $("#arCond").val(),
                        FiltroOleo: $("#oleo").val(),
                        Velas: $("#velas").val(),
                        Luzes: $("#luzes").val(),
                        PastilhaFreio: $("#freios").val(),
                        Amortecedor: $("#amortecedor").val(),
                        Pneu: $("#pneus").val(),
                        CorreiaDentada: $("#correiaDentada").val(),
                        CorreiaAlternador: $("#motor").val(),
                        Alinhamento: $("#alinhamento").val(),
                        FluidoDirecao: $("#fluidoDIre").val(),
                        DiscoFreio: $("#fluidoOleo").val()
                    }
                }

                $.ajax({
                    url: "@Url.Action("CadastroNovoVeiculo", "Veiculo")",
                    cache: false,
                    method: "post",
                    datatype: "json",
                    data: cadastroVeiculo,
                    success: function (dados) {

                        alert("Sucesso");
                    },
                    error: function () {
                        alert("Houve um herro ao salvas os cadastros");
                    }
                });
            }
        });
                                
        
       


        //function cadastro() {
            

        //}
    </script>
}


