
@model  List<ProjetoAdmin.Models.>

@{
    Layout = null;
}

<div>

    <table class="table">
        <thead>
            <tr>
                <th>Código</th>
                <th>Login</th>
                <th>Tipo</th>
                <th>Nome</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Login</td>
                    <td>@Model[i].TipoDeAcesso</td>
                    <td>@Model[i].Nome</td>
                    <td>
                        <button type="button" class="btn btn-primary" onclick="exibirNomeId(@Model[i].Id)">Exibir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div id="vao2"></div>
<script type="text/javascript" src="~/assets/js/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="~/assets/js/bootstrap.min.js"></script>
<script type="text/javascript">
        function exibirNomeId(id) {
            if ($.active) {
                return;
            }

            var obj = {
                id: id
            };

            $.ajax({
                url: "/Pessoa/Modal",
                cache: false,
                method: "get",
                data: obj,
                success: function (dados) {
                    $("#vao2").html(dados);

                    $("#modalExibir").modal({
                        backdrop: "static",
                        keyboard: false
                    });
                },
                error: function () {
                    alert("Deu erro");
                }
            });
        }
</script>
